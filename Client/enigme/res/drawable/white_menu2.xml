<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
             <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#A3A2A6" />
            <stroke
                android:width="1dp"
                android:color="#A3A2A6" />

            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#A3A2A6"
                android:endColor="#A3A2A6"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#A3A2A6" />
       
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>
