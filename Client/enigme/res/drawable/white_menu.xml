<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
         <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#CCD6ED" />
            <stroke
                android:width="1dp"
                android:color="#CCD6ED" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#CCD6ED"
                android:endColor="#CCD6ED"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#CCD6ED" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>
