<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper_ohne4"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/insTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:text="@string/textview"
        android:textColor="@color/menu_text_color"
        android:textStyle="bold"
        android:typeface="serif"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/blue_menu2"
        android:gravity="center"
        android:text="@string/inscription"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/white_menu3"
        android:layout_gravity="center"  >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/white_menu3"
            android:text="@string/id"  />

        <EditText
            android:id="@+id/insEditText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/white_menu2"
            android:layout_weight="1"
            android:inputType="text"
            android:ems="10" >

            <requestFocus />
        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/white_menu3"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView3"
              android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/white_menu3"
            android:text="@string/pw" />

        <EditText
            android:id="@+id/insEditText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/white_menu2"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPassword" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/white_menu3" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/white_menu3"
            android:text="@string/pw"  />

        <EditText
            android:id="@+id/insEditText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:background="@drawable/white_menu2"
            android:ems="10"
            android:inputType="textPassword" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
         android:layout_gravity="center"
         android:background="@drawable/white_menu3" 
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/insButton1"
            android:layout_width="100dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/blue_menu_btn"
            android:layout_height="wrap_content"
            android:text="@string/annuler" />

        <Button
            android:id="@+id/insButton2"
            android:layout_width="100dp"
            android:background="@drawable/blue_menu_btn"
            android:layout_height="wrap_content"
            android:text="@string/valider" />

    </LinearLayout>

</LinearLayout>
